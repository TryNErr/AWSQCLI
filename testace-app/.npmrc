# NPM Configuration for TestAce App
# Helps resolve dependency conflicts and warnings

# Use legacy peer deps to avoid conflicts
legacy-peer-deps=true

# Automatically install peer dependencies
auto-install-peers=true

# Suppress funding messages
fund=false

# Suppress audit warnings for dev dependencies
audit-level=moderate

# Use exact versions for better reproducibility
save-exact=false

# Prefer online resolution
prefer-online=true

# Set registry (use default npm registry)
registry=https://registry.npmjs.org/

# Increase timeout for slow connections
timeout=60000

# Enable progress bar
progress=true

# Set log level to reduce noise
loglevel=warn
